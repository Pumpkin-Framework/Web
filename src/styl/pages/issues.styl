
ul.issues-list
  padding 0
  margin-top 0
  margin-bottom 0
  box-sizing border-box
  display table
  table-layout fixed
  width 100%
  color #999
  border-bottom 1px solid #e5e5e5

  *
    box-sizing border-box

  > li
    width 100%
    border-bottom 1px solid #e5e5e5
    table-layout fixed
    position relative
    list-style none
    display table-row

    > div
      position relative
      display table-cell
      padding 8px 10px
      font-size 12px
      vertical-align top
      border-top 1px solid #eee

    > div:first-child
      border-left 1px solid #eee

    > div:last-child
      border-right 1px solid #eee

    > div.type
      padding-top 10px !important
      padding-left 10px !important
      padding-right 0 !important
      width 20px
      text-align center

      .octicon-issue-opened
        color #6cc644
      .octicon-issue-closed
        color #bd2c00

      > a
        margin-top 3px
        display inline-block

    > div.title
      width 740px
      padding-top 12px

      > a
        padding-right 3px
        margin-bottom 2px
        font-size 15px
        font-weight bold
        line-height 1.2
        color #333

      > div.meta
        margin-top 1px
        margin-bottom 2px
        font-weight normal
        color #999

        > span
          margin-right 10px

        > .milestone > a
          text-decoration none !important
          color #999

          > .octicon
            font-size 14px
            color #ccc

        > .progress
          color #999
          text-decoration none

          > .octicon
            margin-right 5px !important
            color #ccc
            vertical-align middle

          > .counts
            display inline-block
            margin-right 6px !important
            margin-left -2px !important
            font-size 12px !important

          > .progress-bar
            display inline-block
            width 120px
            height 6px
            vertical-align 1px
            background-color #eee
            border-radius 3px
            overflow hidden

            > span
              height 100%
              display block
              background-color #ccc
              transition width 0.3s ease-in-out

      .labels
        display inline-block
        margin-bottom 2px
        vertical-align 1px
        position relative

        > a
          display inline-block
          padding 3px 4px
          font-size 11px
          font-weight bold
          line-height 1.1
          color #fff
          border-radius 2px
          box-shadow inset 0 -1px 0 rgba(0,0,0,0.12)
          text-decoration none !important
          padding-bottom 4px

    > div.avatar
      padding-top 13px !important
      padding-left 0 !important
      padding-right 0 !important
      width 16px

      > a
        display inline-block

        > img
          border-radius 2px

     > div.comments
      width 60px
      padding-top 13px !important
      font-weight bold
      text-align right
      white-space nowrap
