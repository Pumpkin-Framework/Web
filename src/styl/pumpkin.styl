
html, body, div, span, h1, h2, h3, h4, h5, h6, p
  margin 0
  padding 0
  border 0
  outline 0
  font-weight inherit
  font-style inherit
  font-family inherit
  font-size 100%
  vertical-align baseline

h1
  font-size 28px
  line-height 28px
  margin-bottom 15px
  margin-top 15px

h2
  font-size 24px
  line-height 24px
  margin-bottom 7px
  margin-top 10px

h3
  font-size 20px
  line-height 20px
  margin-bottom 7px
  margin-top 10px

h4
  font-size 16px
  line-height 16px
  margin-bottom 7px
  margin-top 10px

body
  background-color bg-color
  color text-color
  font 14px "open sans", "Helvetica Neue", "Microsoft Yahei", Helvetica, Arial, sans-serif

a
  text-decoration none
  color link-color

.muted-link
  color #777

.muted-link:hover
  color #38b7ea !important
  text-decoration none !important
