
.col-1-3
  col(1/3, $gutter: 3)

.col-2-3
  col(2/3, $gutter: 3)

main
  width content-width
  margin 0 auto

.block
  margin-top 40px
  margin-bottom 40px
  background-color white
  box-shadow 0 1px 2px rgba(0,0,0,0.05)

  > div.content
    padding 20px

    p
      line-height 1.6em
      margin-bottom 1.2em

    > :last-child
      margin-bottom 0
    > :first-child
      margin-top 0

    a
      color link-color

    a:hover
      text-decoration underline

    img
      width 100%
      margin-bottom 1.2em

    hr
      border 1px solid #eceff2
      margin-bottom 1.2em

    pre
      padding 15px
      color #666a6f
      background-color #eee
      margin-left -20px
      margin-right -20px
      padding-left 20px
